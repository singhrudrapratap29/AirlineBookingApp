@page "{seatId:int}"
@model AirlineBookingApp.Web.Pages.BookModel
@{
    ViewData["Title"] = "Book Seat";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">
                        <i class="bi bi-ticket-perforated-fill me-2"></i>
                        Book Seat
                    </h2>
                    <p class="mb-0 small">Enter your details to confirm your booking</p>
                </div>
                <div class="card-body p-4">
                    <form method="post" novalidate>
                        @if (!string.IsNullOrEmpty(Model.UserEmail))
                        {
                            <div class="mb-3">
                                <label asp-for="Booking.PassengerName" class="form-label fw-semibold">
                                    <i class="bi bi-person-fill me-1"></i>Passenger Name
                                </label>
                                <input asp-for="Booking.PassengerName" class="form-control rounded-pill" placeholder="Enter your name" />
                                <span asp-validation-for="Booking.PassengerName" class="text-danger small"></span>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Booking.PassengerEmail" class="form-label fw-semibold">
                                    <i class="bi bi-envelope-fill me-1"></i>Passenger Email
                                </label>
                                <input asp-for="Booking.PassengerEmail" class="form-control rounded-pill" placeholder="Enter your email" />
                                <span asp-validation-for="Booking.PassengerEmail" class="text-danger small"></span>
                            </div>
                            <!-- Coupon Code Input -->
                            <div class="mb-4">
                                <label for="CouponCode" class="form-label fw-semibold">
                                    <i class="bi bi-gift-fill me-1"></i>Coupon Code
                                </label>
                                <input type="text" id="CouponCode" name="CouponCode" class="form-control rounded-pill" value="@Model.CouponCode" placeholder="Enter coupon code (optional)" />
                                <span asp-validation-for="CouponCode" class="text-danger small"></span>
                            </div>
                            <!-- Discount and Total Display -->
                            @if (Model.Discount > 0)
                            {
                                <div class="alert alert-success rounded-pill text-center mb-3">
                                    Coupon applied! Discount: @Model.Discount.ToString("C")
                                </div>
                                <div class="text-center mb-3">
                                    <strong>Total after discount:</strong> @Model.TotalAfterDiscount.ToString("C")
                                </div>
                            }
                            else if (Model.BookingTotal > 0)
                            {
                                <div class="text-center mb-3">
                                    <strong>Total:</strong> @Model.BookingTotal.ToString("C")
                                </div>
                            }
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary rounded-pill fw-bold">
                                    <i class="bi bi-check2-circle me-1"></i>Confirm Booking
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger text-center mb-0 rounded-pill">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                You must be logged in to book a flight.
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <partial name="_ValidationScriptsPartial" />
}