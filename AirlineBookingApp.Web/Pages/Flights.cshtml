@page
@model AirlineBookingApp.Web.Pages.FlightsModel
@{
    ViewData["Title"] = "Flights";
}

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">
                        <i class="bi bi-airplane-engines-fill me-2"></i>
                        Search Flights
                    </h2>
                    <p class="mb-0 small">Find your next destination</p>
                </div>
                <div class="card-body p-4">
                    <form method="get" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label asp-for="source" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt-fill me-1"></i>Source
                            </label>
                            <input type="text" asp-for="source" placeholder="Source" class="form-control rounded-pill" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="destination" class="form-label fw-semibold">
                                <i class="bi bi-geo-fill me-1"></i>Destination
                            </label>
                            <input type="text" asp-for="destination" placeholder="Destination" class="form-control rounded-pill" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="date" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event-fill me-1"></i>Date
                            </label>
                            <input type="date" asp-for="date" class="form-control rounded-pill" />
                        </div>
                        <div class="col-md-1 d-grid">
                            <button type="submit" class="btn btn-primary rounded-pill fw-bold">
                                <i class="bi bi-search me-1"></i>Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">
                        <i class="bi bi-list-ul me-2"></i>
                        Available Flights
                    </h3>
                </div>
                <div class="card-body p-4">
                    <table class="table table-bordered table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Flight Number</th>
                                <th>Source</th>
                                <th>Destination</th>
                                <th>Departure</th>
                                <th>Arrival</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Flights != null && Model.Flights.Count > 0)
                            {
                                foreach (var flight in Model.Flights)
                                {
                                    <tr>
                                        <td>@flight.FlightNumber</td>
                                        <td>@flight.Source</td>
                                        <td>@flight.Destination</td>
                                        <td>@flight.DepartureTime</td>
                                        <td>@flight.ArrivalTime</td>
                                        <td>
                                            <a asp-page="/Seats" asp-route-id="@flight.Id" class="btn btn-primary btn-sm rounded-pill">
                                                <i class="bi bi-eye-fill me-1"></i>View Seats
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="bi bi-exclamation-circle me-2"></i>No Flights Found!
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
}