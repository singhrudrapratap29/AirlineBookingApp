@page
@model AirlineBookingApp.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center align-items-center min-vh-100 bg-light">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4">
                <h2 class="mb-0">
                    <i class="bi bi-airplane-engines-fill me-2"></i>
                    Welcome!
                </h2>
                <p class="mb-0 small">Sign in to book your next flight</p>
            </div>
            <div class="card-body p-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope-at me-1"></i>Email Address
                        </label>
                        <input asp-for="Email" class="form-control rounded-pill" placeholder="you@email.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Password" class="form-label fw-semibold">
                            <i class="bi bi-lock-fill me-1"></i>Password
                        </label>
                        <input asp-for="Password" class="form-control rounded-pill" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="mb-4 text-end">
                        <a asp-page="/Account/ResetPassword" class="text-primary small fw-semibold text-decoration-none">
                            <i class="bi bi-question-circle me-1"></i>Forgot password?
                        </a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                    </button>
                </form>
            </div>
            <div class="card-footer text-center bg-white rounded-bottom-4">
                <span class="text-muted">Don't have an account?</span>
                <a asp-page="/Account/Register" class="ms-1 text-primary fw-semibold">Sign Up</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
}